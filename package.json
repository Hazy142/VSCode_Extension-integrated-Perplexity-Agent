{
  "name": "perplexity-vscode-extension",
  "displayName": "Perplexity Pro Extension",
  "description": "Eine VSCode-Erweiterung, die Perplexity AI integriert.",
  "version": "0.1.0",
  "publisher": "Hazy142",
  "main": "./out/src/extension.js",
  "engines": {
    "vscode": "^1.85.0"
  },
  "activationEvents": [
    "onView:perplexity.chat",
    "*"
  ],
  "contributes": {
    "commands": [
      {
        "command": "perplexity-vscode.showChat",
        "title": "Perplexity: Chat anzeigen"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "perplexity-container",
          "title": "Perplexity",
          "icon": "assets/perplexity-logo.svg"
        }
      ]
    },
    "views": {
      "perplexity-container": [
        {
          "icon": "assets/perplexity-logo.svg",
          "id": "perplexity.chat",
          "name": "Chat",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./tsconfig.json",
    "build:webview": "npm run build --prefix webview",
    "watch": "tsc -watch -p ./tsconfig.json",
    "lint": "eslint src --ext ts",
    "test": "jest",
    "build:production": "npm run compile && npm run build:webview",
    "build:extension-only": "npm run compile",
    "package": "npm run build:extension-only && vsce package"
  },
  "devDependencies": {
    "@types/glob": "^8.1.0",
    "@types/jest": "^30.0.0",
    "@types/mocha": "^10.0.10",
    "@types/node": "^18.19.3",
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.3.9",
    "@vscode/vsce": "^2.23.0",
    "glob": "^11.0.3",
    "jest": "^30.2.0",
    "mocha": "^11.7.4",
    "ts-jest": "^29.4.5",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.10.1",
    "@types/lru-cache": "^7.10.9",
    "lru-cache": "^11.2.2",
    "openai": "^6.3.0",
    "undici": "^7.16.0",
    "zod": "^3.22.4"
  }
}
