{
  "name": "perplexity-vscode-extension",
  "displayName": "Perplexity Pro Extension",
  "description": "Eine VSCode-Erweiterung, die Perplexity AI integriert.",
  "version": "0.1.0",
  "publisher": "Hazy142",
  "main": "./out/extension.js",
  "engines": {
    "vscode": "^1.85.0"
  },
  "activationEvents": [],
  "contributes": {
    "commands": [
      {
        "command": "perplexity-vscode.showChat",
        "title": "Perplexity: Chat anzeigen"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "cd webview && npm install && npm run build && cd .. && npm run compile",
    "compile": "tsc -p ./tsconfig.json",
    "watch": "tsc -watch -p ./tsconfig.json",
    "lint": "eslint src --ext ts",
    "test": "node ./out/src/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^24.6.2",
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.3.9",
    "typescript": "^5.3.3"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.19.1",
    "@types/glob": "^8.1.0",
    "axios": "^1.6.8",
    "glob": "^11.0.3",
    "zod": "^3.25.76"
  }
}