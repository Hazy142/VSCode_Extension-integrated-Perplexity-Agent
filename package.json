{
  "name": "perplexity-vscode-extension",
  "displayName": "Perplexity Pro Extension",
  "description": "Eine VSCode-Erweiterung, die Perplexity AI integriert.",
  "version": "0.1.0",
  "publisher": "Hazy142",
  "main": "./out/src/extension.js",
  "engines": {
    "vscode": "^1.85.0"
  }, "activationEvents": [
    "onView:perplexity.chat"
  ],
  "contributes": {
    "commands": [
      {
        "command": "perplexity-vscode.showChat",
        "title": "Perplexity: Chat anzeigen"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "perplexity-container",
          "title": "Perplexity",
          "icon": "assets/perplexity-logo.svg"
        }
      ]
    },
    "views": {
      "perplexity-container": [
        {
          "id": "perplexity.chat",
          "name": "Chat",
          "type": "webview"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile && npm run build:webview",
    "compile": "tsc -p ./tsconfig.json",
    "build:webview": "npm run build --prefix webview",
    "watch": "tsc -watch -p ./tsconfig.json",
    "lint": "eslint src --ext ts",
    "test": "node ./out/src/test/runTest.js"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "^18.19.3",
    "@types/vscode": "^1.85.0",
    "@vscode/test-electron": "^2.3.9",
    "typescript": "^5.3.3",
    "@types/glob": "^8.1.0"

  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.19.1",
    "axios": "^1.6.8",
    "glob": "^8.1.0",
    "zod": "^3.22.4"
  }
}