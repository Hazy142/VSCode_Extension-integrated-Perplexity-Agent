{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "NodeNext",
    "target": "es2022",
    "outDir": "out",
    "lib": [
      "es2022"
    ],
    "sourceMap": true,
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "rootDir": "."
  },
  "include": [
    "src/**/*.ts",
    "types.ts"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test",
    "webview"
  ]
}