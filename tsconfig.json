{
  "compilerOptions": {
    "module": "ESNext",
    "target": "ES2022",
    "lib": ["ES2022"], // Beh√§lt die moderne JavaScript-Bibliothek
    "sourceMap": true,
    "rootDir": ".",
    "outDir": "out",
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "skipLibCheck": true
  },
  "include": [
    "src/**/*.ts",
    "types/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    ".vscode-test",
    "webview"
  ]
}